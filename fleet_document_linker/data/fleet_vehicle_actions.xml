<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Acción de servidor para vinculación masiva de documentos -->
        <record id="action_mass_link_documents" model="ir.actions.server">
            <field name="name">Vincular Documentos Masivamente</field>
            <field name="model_id" ref="fleet.model_fleet_vehicle"/>
            <field name="binding_model_id" ref="fleet.model_fleet_vehicle"/>
            <field name="binding_type">action</field>
            <field name="state">code</field>
            <field name="code">records.action_mass_link_documents_by_name()</field>
            <field name="groups_id" eval="[(4, ref('fleet.fleet_group_manager'))]"/>
        </record>
        
        <!-- Acción para verificar módulo documents -->
        <record id="action_check_documents_module" model="ir.actions.server">
            <field name="name">Verificar Módulo Documents</field>
            <field name="model_id" ref="fleet.model_fleet_vehicle"/>
            <field name="binding_model_id" ref="fleet.model_fleet_vehicle"/>
            <field name="binding_type">action</field>
            <field name="state">code</field>
            <field name="code">records[0].action_check_documents_module()</field>
            <field name="groups_id" eval="[(4, ref('fleet.fleet_group_manager'))]"/>
        </record>
    </data>
</odoo>